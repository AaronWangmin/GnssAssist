<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filedialog_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/filedialog_background"
    android:orientation="horizontal"
    android:padding="@dimen/layout_spacing" >
    
    <ImageView
        android:id="@+id/filedialog_item_img"
        android:layout_width="@dimen/filedialog_item_image_width"
        android:layout_height="@dimen/filedialog_item_image_height"
        android:contentDescription="@string/filedialog_image_content"
        android:layout_margin="@dimen/layout_spacing" />
    
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical" >
       
       <TextView
            android:id="@+id/filedialog_item_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/filedialog_item_font_color"
            android:textSize="@dimen/filedialog_item_name_font_size"
            android:textStyle="bold" />
       <TextView
            android:id="@+id/filedialog_item_path"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/filedialog_item_path_padding_left"
            android:textColor="@color/filedialog_item_font_color"
            android:textSize="@dimen/filedialog_item_path_font_size" />
       
    </LinearLayout>
</LinearLayout>